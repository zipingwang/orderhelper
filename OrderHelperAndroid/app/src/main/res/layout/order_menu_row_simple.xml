<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/order_line_backcolor"
    android:layout_marginTop="3dp"
     >
    <TextView
        android:id="@+id/txtOrderMenuName"
        android:layout_width="0dip"
        android:layout_weight="1"        
        style="@style/order_line"
        android:text="TextView"  android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/txtOrderCount"
        android:layout_width="25sp"
        style="@style/order_line"
        android:text="10" />
    <Button android:id="@+id/btnAddOne" android:minWidth="50dp"  android:layout_width="wrap_content" style="@style/order_line_button"
        android:text="@string/btn_add_one"></Button>"
    <Button android:id="@+id/btnRemoveOne" android:minWidth="50dp" android:layout_width="wrap_content" style="@style/order_line_button"
        android:text="@string/btn_remove_one"></Button>
</LinearLayout>