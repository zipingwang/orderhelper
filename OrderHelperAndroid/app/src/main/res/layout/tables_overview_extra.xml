<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  
<Button android:id="@+id/btnLogin" android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:text="用户登录"/>
<Button android:id="@+id/btnDeleteAllTables" android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:text="清空所有单子"/>
<Button android:id="@+id/btnDownloadMenu" android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:text="下载菜单"/>
<Button android:id="@+id/btnEditBusinessInfo"  android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:text="商家信息" />
<Button android:id="@+id/btnParameters"  android:layout_width="fill_parent" android:layout_height="wrap_content"
     android:text="配置参数" />
<Button android:id="@+id/btnAbout"  android:layout_width="fill_parent" android:layout_height="wrap_content"
     android:text="版本信息" />
<Button android:id="@+id/btnExit"  android:layout_width="fill_parent" android:layout_height="wrap_content"
     android:text="退出" />
</LinearLayout>